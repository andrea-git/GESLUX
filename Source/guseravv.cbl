                end-read
                move tav-messaggio to col-messaggio
                modify gd1(riga, 3), CELL-DATA col-messaggio
                move zero to riga-nuova
           end-evaluate.


      ***---
       CERCA-DOPPIONE.
           inquire ef-codice, VALUE uav-utente of useravv1
           inquire gd1(riga, 2), cell-data uav-tipologia of useravv1
           read useravv1
              invalid
                 continue
              not invalid
                 set errori to true
                 display message "Messaggio già inserito"
                         title tit-err
                         icon 2
           end-read           


           .
      * <TOTEM:END>

       CURRENT-RECORD.
      * <TOTEM:PARA. CURRENT-RECORD>
           perform X-Y.
           move riga to store-riga.
           if riga = 0
              move 2 to store-riga
           end-if.
           if riga > tot-righe
              move store-riga to riga
           end-if.

           unlock useravv all records.
           if ReadSecca
              perform RIEMPI-CHIAVE
              move uav-utente of useravv to save-codice
              move low-value  to uav-tipologia of useravv
           end-if.

           set tutto-ok  to true.
           set trovato   to false.

           move uav-utente of useravv to user-cod.

           if user-cod = 78-user-tutti
              move 78-user-tutti-descr   to user-name
           else
              read user no lock
                 invalid 
                    continue
              end-read
           end-if.

           start useravv key >= uav-chiave of useravv
              invalid 
                 set errori to true
           end-start.

           if tutto-ok
              modify gd1, mass-update = 1
              perform RESET-GRIGLIA
              move 2 to riga

              perform until 1 = 2
                 read useravv next no lock
                      at end
                      exit perform
                 end-read

                 if uav-utente of useravv not = save-codice
                    exit perform
                 end-if

                 set trovato to true 

                 if nuovo
                    set vecchio to true
                    move 1 to mod-k
                    move 0 to mod
                 end-if
                 
                 move uav-tipologia of useravv to col-tipo
                                                  tav-codice
                 read ttipoavv
                    invalid
                       initialize tav-messaggio
                 end-read
                 move tav-messaggio   to col-messaggio

                 modify gd1(riga, 2),    cell-data = col-tipo
                 modify gd1(riga, 3),   cell-data = col-messaggio
                 add 1 to riga
              end-perform

              modify gd1, mass-update = 0
      *        move save-codice  to ef-codice-buf
      *        modify ef-codice  value ef-codice-buf
           end-if.

           if trovato
              move save-codice to old-uav-utente
                                  uav-utente of useravv
              set tutto-ok to true
              perform FORM1-FLD-TO-BUF
              display ef-codice lab-des
              if mod = 1
                 move store-riga   to riga event-data-2
                 move 2            to colonna
                 perform LOCK-RECORD
                 perform PUNTA-CELLA
                 perform VALORE-OLD-RIGA
                 set  StatusModifica to true
              else
                 perform CANCELLA-COLORE
                 move 78-ID-ef-codice to control-id
                 move 4               to accept-control
                 set  StatusVisua     to true
              end-if
           else
              set errori to true
              unlock useravv all records
              if vecchio
                 if ReadSecca
                    display message MSG-record-inesistente
                              title tit-err
                               icon 2
                    perform CLEAR-SCREEN
                    initialize save-chiave
                 end-if
              end-if
           end-if.

           perform ABILITAZIONI.
           set ReadSecca to false.

           display form1.
           perform STATUS-BAR-MSG 
           .
      * <TOTEM:END>

