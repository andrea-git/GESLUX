       CERCA.
      * <TOTEM:PARA. CERCA>
           evaluate control-id 
           when 78-ID-ef-cod-da
                inquire ef-cod-da, value in art-codice
                move  "articoli"      to como-file
                call   "zoom-gt"   using como-file, art-rec
                                  giving stato-zoom
                cancel "zoom-gt"
                if stato-zoom = 0
                   move art-codice      to ef-cod-da-buf
                   display ef-cod-da
                end-if

           when 78-ID-ef-cod-a
                inquire ef-cod-a, value in art-codice
                move  "articoli"      to como-file
                call   "zoom-gt"   using como-file, art-rec
                                  giving stato-zoom
                cancel "zoom-gt"
                if stato-zoom = 0
                   move art-codice      to ef-cod-a-buf
                   display ef-cod-a
                end-if

           when 78-ID-ef-old
                inquire ef-old, value in sco-codice
                move   "tscorte"       to como-file
                call   "zoom-gt"    using como-file, sco-rec
                                   giving stato-zoom
                cancel "zoom-gt"
                if stato-zoom = 0
                   move sco-codice      to ef-old-buf
                   move sco-descrizione to lab-old-buf
                   display ef-old lab-old
                end-if

           when 78-ID-ef-new
                inquire ef-new, value in sco-codice
                move   "tscorte"       to como-file
                call   "zoom-gt"    using como-file, sco-rec
                                   giving stato-zoom
                cancel "zoom-gt"
                if stato-zoom = 0
                   move sco-codice      to ef-new-buf
                   move sco-descrizione to lab-new-buf
                   display ef-new lab-new
                end-if
                
           end-evaluate 
           .
      * <TOTEM:END>

       CONTROLLO.
      * <TOTEM:PARA. CONTROLLO>
           set tutto-ok to true.

           evaluate control-id
           when 78-ID-ef-cod-a
                inquire ef-cod-da, value in ef-cod-da-buf
                inquire ef-cod-a,  value in ef-cod-a-buf

                if ef-cod-a-buf = 0
                   move 999999 to ef-cod-a-buf
                   display ef-cod-a
                end-if
                
                if ef-cod-a-buf < ef-cod-da-buf
                   set errori to true
                   display message "Intervallo codici errato"
                             title tit-err
                              icon 2
                end-if

           when 78-ID-ef-old
                inquire ef-old, value in sco-codice
                if sco-codice = 0
                   move "Tutte le marche" to lab-old-buf
                else
                   read tscorte no lock
                        invalid
                        move spaces to lab-old-buf
                        set errori to true
                        display message "Scorta NON valida"
                                  title tit-err
                                   icon 2
                    not invalid
                        move sco-descrizione to lab-old-buf
                   end-read
                end-if
                display lab-old  

           when 78-ID-ef-new
                inquire ef-new, value in sco-codice
                read tscorte no lock
                     invalid
                     move spaces to lab-new-buf
                     set errori to true
                     display message "Scorta NON valida"
                               title tit-err
                                icon 2
                 not invalid
                     move sco-descrizione to lab-new-buf
                end-read
                display lab-new

           end-evaluate.

           if errori
              perform CANCELLA-COLORE
              move 4 to accept-control
           end-if 
           .
